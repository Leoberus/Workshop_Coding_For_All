<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Screen"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="#F4F4F4"
        android:elevation="3dp"
        android:id="@+id/Header">

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/camera_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/cemera" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="casual"
            android:gravity="center_horizontal|center_vertical"
            android:text="instajram"
            android:textSize="25dp"
            android:textStyle="bold" />

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/dm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/dm_icon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:weightSum="5"
        android:elevation="3dp"
        android:background="#F4F4F4"
        android:orientation="horizontal">

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/home"
            android:padding="15dp"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/magnify_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/magnify_icon"
            android:padding="20dp"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/capture_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/add_icon"
            android:padding="20dp"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/noti_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/heath_icon"
            android:padding="20dp"/>
        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/user"
            android:padding="15dp"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Header"
        android:layout_marginTop="5dp"
        android:elevation="0dp"
        android:layout_above="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pattarapol"/>
        </LinearLayout>

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/img_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pattarapol"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher_round"/>
                <TextView
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pattarapol"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/img_feed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:id="@+id/caption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pattarapol"
                android:textStyle="bold"/>


        </LinearLayout>



    </ScrollView>

</RelativeLayout>